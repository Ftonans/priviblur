{% extends "base.jinja" %}
{% block title %}{{html_escape(query)}} - Privblur{% endblock %}
{% block content %}
    {% include 'components/timeline.jinja' %}

    {%- if timeline.next %}
        <div class="paging">
            <div class="next-page button">
                <a href="{{endpoint}}/{{query}}?continuation={{url_escape(timeline.next.cursor)}}">Next Page</a>
            </div>
        </div>
    {% endif %}
{% endblock %}